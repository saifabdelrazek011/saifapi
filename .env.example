# Server Configuration
PORT=3000
NODE_ENV=development
SERVER_URL=http://localhost:3000

# Database Configuration
# Multiple database URIs for different services
USERS_DB_URI=your_users_mongodb_connection_string
SHORTURLS_DB_URI=your_shorturls_mongodb_connection_string
POSTS_DB_URI=your_posts_mongodb_connection_string
SUBSCRIPTIONS_DB_URI=your_subscriptions_mongodb_connection_string
NEWSLETTERS_DB_URI=your_newsletters_mongodb_connection_string
